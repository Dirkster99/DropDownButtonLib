<Application x:Class="DropDownButtonTest.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <!-- This color definition is a test Pre-requisite for Metro themes build on mui.codeplex.com -->
                    <Color x:Key="AccentColor" >#ff3399ff</Color>
                </ResourceDictionary>

                <!--
          Note: Comment out all ResourceDictionary references to activate the generic theme.
                This forces WPF to load the definitions at: "/DropDownButtonLib;component/Themes/Generic.xaml"

          Activate each available theme by commenting in 1 of the resource dictionaries below.
          Metro themes are otptimized for Edi (edi.codeplex.com) so they may not look nice here
          in the test application but are working OK. Review Edi to get a better impression about these themes.
        -->

                <ResourceDictionary Source="/DropDownButtonLib;component/Themes/MetroDark.xaml" />
                <!-- ResourceDictionary Source="/DropDownButtonLib;component/Themes/MetroLight.xaml" / -->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </Application.Resources>
</Application>
